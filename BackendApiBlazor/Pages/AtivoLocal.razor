@page "/AtivoLocal"
@using BackendApiBlazor.Data
@using System.Text.Json

<h1>Lista de Ativos Locais</h1>

@if (ativosLocais == null)
{
    <p><em>Sem informações...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Referência</th>
                <th>Área</th>
                <th>Setor</th>
                <th>Descrição</th>
                <th>Inativo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ativo in ativosLocais)
            {
                <tr>
                    <td>@ativo.Referencia</td>
                    <td>@ativo.Area</td>
                    <td>@ativo.Setor</td>
                    <td>@ativo.Descricao</td>
                    <td>@ativo.Inativo</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AtivoLocalModel> ativosLocais;

    protected override async Task OnInitializedAsync()
    {
        ativosLocais = new List<AtivoLocalModel>
        {
            new AtivoLocalModel
            {
                Referencia = "REF001",
                Area = "Área A",
                Setor = "Setor 1",
                Descricao = "Descrição do Ativo 1",
                Inativo = false
            },
            new AtivoLocalModel
            {
                Referencia = "REF002",
                Area = "Área B",
                Setor = "Setor 2",
                Descricao = "Descrição do Ativo 2",
